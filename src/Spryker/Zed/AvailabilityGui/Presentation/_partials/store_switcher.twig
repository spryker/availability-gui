{% if stores is defined %}
    <span class="m-r-sm">
        <label>{{ 'Store' | trans }}</label>
        <select name="id-store" onchange="this.form.submit()" onblur="this.form.submit()">
            {% for store in stores %}
                <option value="{{ store.idStore }}" {{ (store.idStore == idStore) ? 'selected' : ''}}>{{ store.name }}</option>
            {% endfor %}
        </select>
    </span>
{% endif %}
{% if idProduct is defined %}
    <input type="hidden" name="id-product" value="{{ idProduct }}">
{% endif %}
